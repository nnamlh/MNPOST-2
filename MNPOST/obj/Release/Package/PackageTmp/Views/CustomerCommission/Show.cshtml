                    $scope.sendDelete();
                }
            };
            // them tinh
            $scope.sendCreate = function () {
                showLoader(true);

                $http({
                    method: "POST",
                    url: "/CustomerCommission/create",
                    data: {  thangchot: $scope.CongNo.Thang}
                }).then(function success(response) {
                    var result = response.data;

                    if (result.error === 0) {

                        $scope.GetData();
                        $('.nav-tabs a[href="#tab_danhmuc"]').tab('show');
                        hideModel("congnomodal");
